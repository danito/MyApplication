<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.nixekinder.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo_k" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="WithKnown. Blogging, meet social." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="https://www.withknown.com/" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/share_it_wk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="@string/no_settings"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/icon_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/catStatus"
                android:textSize="48sp"
                android:text="@string/fa_icon_comment_o"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/catImage"
                android:clickable="true"
                android:layout_weight="1"
                android:textSize="48sp"
                android:text="@string/fa_icon_file_picture_o"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/catBookmark"
                android:clickable="true"
                android:layout_weight="1"
                android:textSize="48sp"
                android:text="@string/fa_icon_bookmark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/catLocation"
                android:clickable="true"
                android:layout_weight="1"
                android:textSize="48sp"
                android:text="@string/fa_icon_map_marker"/>
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/catMicrophone"
                android:clickable="true"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="48sp"
                android:text="@string/fa_icon_microphone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/catLike"
                android:clickable="true"
                android:layout_weight="1"
                android:textSize="48sp"
                android:text="@string/fa_icon_star_o"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:id="@+id/catRepost"
                android:layout_weight="1"
                android:textSize="48sp"
                android:text="@string/fa_icon_retweet"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/catPost"
                android:layout_weight="1"
                android:clickable="true"
                android:textSize="48sp"
                android:text="@string/fa_icon_align_left"/>

        </LinearLayout>
        <ViewStub
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stub"
            android:inflatedId="@+id/dynForm"/>
        
    </LinearLayout>

</LinearLayout>
